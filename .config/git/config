[core]
  eol = lf
  autocrlf = input
  safecrlf = false
[init]
  defaultBranch = main
[commit]
  # Show diff when preparing commit message
  verbose = true
[push]
  default = simple
[pull]
  ff = only
[fetch]
  recurseSubmodules = true
[rerere]
  enabled = true
  autoupdate = true
[rebase]
  # Automatically stash before a rebase and unstash afterwards.
  autoStash = true
[merge]
  conflictStyle = zdiff3
  tool = bc
[mergetool]
  keepBackup = false
[diff]
  tool = bc
  colorMoved = default
[alias]
  st = status
  co = checkout
  c = commit
  sw = switch
  l = pull
  p = push
  aa = add --all
  ac = "!git add --all && git commit"
  undo = reset HEAD~1 --mixed
  nuke = !sh -c 'git branch -D $1 && git push origin :$1' -
  sync = "!curbranch=$(git rev-parse --abbrev-ref HEAD); for branch in $(git for-each-ref refs/heads --format='%(refname:short)') ; do if [ $branch = $curbranch ]; then git merge --ff-only origin/${branch}; else git fetch origin ${branch}:${branch}; fi; done;"
[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta
[include]
  path = ~/.config/delta/themes.gitconfig
[delta]
  features = mantis-shrimp-lite # zebra-dark
  syntax-theme = Catppuccin-mocha
[interactive]
  diffFilter = delta --color-only
